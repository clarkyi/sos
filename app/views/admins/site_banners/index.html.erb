    <p id="notice"><%= notice %></p>
  </div>
<%end%>
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      banner 列表
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <%if @site_banners.present?%>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <td>id</td>
              <td>banner</td>
              <td>操作</td>
            </tr>
          </thead>
          <tbody>
            <% @site_banners.each_with_index do |banner,index| %>
              <tr>
                <td><%=index + 1%></td>
                <td><%=image_tag(banner.base_url,style: "height: 120px; width: 350px; display: block;")%></td>
                <td>
                  <%= link_to '删除', "/admins/site_banners/#{banner.id}", method: :delete, data: { confirm: '删除后不可恢复，确定?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%else%>
          真懒，还没有添加banner呢！赶紧<%= link_to"添加",new_admins_site_banner_path%>吧！
        <%end%>
      </div>
    </div>
  </div>
  <%= link_to '上传banner', new_admins_site_banner_path,class: "btn btn-default" %>
</div>
<p><strong>Note:</strong></p>
<p><span style="color:red">"banner"</span>有多少，首页就会显示多少，如果上传错误请删除！</p>

